# Shopify App Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_APP_URL=https://your-ngrok-url.ngrok.io
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# Shopify App Scopes for Indian T-shirt store order management and GST compliance
SCOPES=read_orders,read_customers,read_products,read_product_listings,read_inventory,read_locations,read_shipping,read_analytics,read_reports,write_files,read_content,write_content

# Host Configuration
HOST=https://your-ngrok-url.ngrok.io

# Next.js Public Environment Variables
NEXT_PUBLIC_SHOPIFY_API_KEY=your_api_key_here

# Development
NODE_ENV=development
PORT=3000
BACKEND_PORT=3000

# Database
DATABASE_URL=sqlite:database.sqlite

# Session Storage Configuration
SESSION_SECRET=your_session_secret_here

# GST Configuration
DEFAULT_STORE_STATE=Gujarat
DEFAULT_GST_RATES_BELOW_1000=0.05
DEFAULT_GST_RATES_ABOVE_1000=0.12

# File Storage Configuration (for PDF/CSV exports)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=info