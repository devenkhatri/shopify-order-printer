# Production Environment Configuration for Shopify Order Printer App

# Shopify App Configuration (REQUIRED)
SHOPIFY_API_KEY=your_production_api_key_here
SHOPIFY_API_SECRET=your_production_api_secret_here
SHOPIFY_APP_URL=https://your-production-domain.com
SHOPIFY_WEBHOOK_SECRET=your_production_webhook_secret_here

# Next.js Public Environment Variables
NEXT_PUBLIC_SHOPIFY_API_KEY=your_production_api_key_here

# Production Environment
NODE_ENV=production
PORT=3000

# Production Database Configuration
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@host:port/database_name
# Alternative: For MySQL
# DATABASE_URL=mysql://username:password@host:port/database_name
# Alternative: For SQLite (not recommended for production)
# DATABASE_URL=sqlite:./production.sqlite

# Session Storage Configuration (REQUIRED - Generate strong secret)
SESSION_SECRET=your_very_strong_session_secret_minimum_32_characters_long

# GST Configuration for Indian Compliance
DEFAULT_STORE_STATE=Gujarat
DEFAULT_GST_RATES_BELOW_1000=0.05
DEFAULT_GST_RATES_ABOVE_1000=0.12

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
# For cloud storage (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# Logging Configuration
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false

# Security Configuration
ENABLE_HTTPS_REDIRECT=true
TRUST_PROXY=true

# Performance Configuration
ENABLE_COMPRESSION=true
CACHE_MAX_AGE=3600

# Monitoring and Analytics (optional)
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://*.myshopify.com,https://admin.shopify.com

# SSL/TLS Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000